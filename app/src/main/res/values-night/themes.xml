<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.Gitser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="navigationIcon">@drawable/baseline_arrow_back_ios_new_24</item>
    </style>

    <style name="TextContent.TitleMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="TextContent.TitleMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.TitleMedium.Bold.MarginStart">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="TextContent.BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="TextContent.BodyMedium.marginHorizontal">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="TextContent.BodyMedium.Gray">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>
</resources>